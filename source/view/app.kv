#:kivy 1.9.1
<DataScreen>:
	FloatLayout:
		BoxLayout:
			BoxLayout:
				orientation: 'vertical'
				Label:
					id: status
					text: 'Disconnected'
					font_size: '8dp'
					halign: 'center'
					valign: 'middle'
					pos_hint: {'right': 1.2}
				Label:
					id: cell
					text: '0.0 V'
					font_size: '15dp'
					halign: 'center'
					valign: 'middle'
					size_hint: (1, 0.2)
				Button:
					id: exit
					text: 'Exit'
					halign: 'center'
					valign: 'middle'
					background_color: (0,0,0,0)
					on_release: app.stop()
					pos_hint: {'right': 1.2}
			BoxLayout:
				orientation: 'vertical'
				padding_top: 20
				Label:
					id: time
					text: '--:--'
					font_size: '20dp'
					halign: 'center'
					valign: 'middle'
				Label:
					id: speed
					text: '0.0'
					font_size: '55dp'
					halign: 'center'
					valign: 'middle'
				Label:
					id: dutycycle
					text: '0%'
					font_size: '15dp'
					halign: 'center'
					valign: 'middle'
			BoxLayout:
				orientation: 'vertical'
				Button:
					id: voltage
					text: '0.0v'
					font_size: '15dp'
					halign: 'center'
					valign: 'middle'
					pos_hint: {'right': 0.8}
					background_color: (0,0,0,0)
					on_release:
						app.stop()
				Label:
					id: current
					text: '0.0 A'
					font_size: '15dp'
					halign: 'center'
					valign: 'middle'
					size_hint: (1, 0.2)
				Button:
					id: settings
					text: 'Config'
					halign: 'center'
					valign: 'middle'
					background_color: (0,0,0,0)
					on_release:
						app.root.transition.direction = 'left'
						app.root.current = 'settings'
					pos_hint: {'right': 0.8}

<SettingsScreen>:
	FloatLayout:
		BoxLayout:
			BoxLayout:
				orientation: 'vertical'
				Label:
					text: 'Settings'
					font_size: '10dp'
					halign: 'center'
					valign: 'middle'
					size_hint_y: 0.4
				ScrollView:
					do_scroll_x: False
					do_scroll_y: True
					GridLayout:
						id: settings
						cols: 1
						row_force_default: True
						row_default_height: '30dp'
						size_hint: None, None
						width: root.width
						height: self.minimum_height
						spacing: (0, '3dp')
						AnchorLayout:
							Button:
								id: scan
								text: 'Start Scan'
								halign: 'center'
								valign: 'middle'
								size_hint_x: None
								width: '140dp'
								#background_color: (0,0,0,0)
								on_release:
									app.scanning = True
									app.root.transition.direction = 'left'
									app.root.current = 'scan'
						AnchorLayout:
							Spinner:
								id: unit
								text: app.config.get('wearvesc','unit')
								values: 'KMH', 'MPH'
								size_hint_x: None
								width: '140dp'
						AnchorLayout:
							NumericInput:
								id: cells
								title: 'Cells'
								value: int(app.config.get('wearvesc','cells'))
								min: 1
								max: 24
								step: 1
								size_hint_x: None
								width: '140dp'
						AnchorLayout:
							NumericInput:
								id: poll
								title: 'HZ'
								value: int(float(app.config.get('wearvesc','poll')))
								min: 1
								max: 12
								step: 1
								size_hint_x: None
								width: '140dp'
				Button:
					id: back
					text: 'Back'
					halign: 'center'
					valign: 'middle'
					background_color: (0,0,0,0)
					size_hint_y: 0.4
					on_release: 
						app.root.transition.direction = 'right'
						app.root.current = 'data'
						app.update_config()

<ScanScreen>:
	FloatLayout:
		BoxLayout:
			BoxLayout:
				orientation: 'vertical'
				Label:
					text: 'Scanning...'
					font_size: '10dp'
					halign: 'center'
					valign: 'middle'
					size_hint_y: 0.4
				ScrollView:
					do_scroll_x: False
					do_scroll_y: True
					GridLayout:
						id: devices
						cols: 1
						row_force_default: True
						row_default_height: '30dp'
						size_hint: None, None
						width: root.width
						height: self.minimum_height
						spacing: (0, '3dp')
				Button:
					id: back
					text: 'Back'
					halign: 'center'
					valign: 'middle'
					background_color: (0,0,0,0)
					size_hint_y: 0.4
					on_release:
						app.root.transition.direction = 'right'
						app.root.current = 'settings'
						app.scanning = False

<DisclosureScreen>:
	FloatLayout:
		BoxLayout:
			BoxLayout:
				orientation: 'vertical'
				Label:
					text: 'Location use'
					font_size: '14dp'
					halign: 'center'
					valign: 'middle'
					size_hint_y: 0.4
				ScrollView:
					do_scroll_x: False
					do_scroll_y: True
					Label:
						text: 'This app requests location\nto only enable Bluetooth LE.'
						font_size: '12dp'
						valign: 'middle'
				Button:
					id: Allow
					text: 'Next'
					halign: 'center'
					valign: 'middle'
					background_color: (0,0,0,0)
					size_hint_y: 0.4
					on_release:
						app.root.transition.direction = 'right'
						app.root.current = 'data'
				Button:
					id: Exit
					text: 'Exit'
					halign: 'center'
					valign: 'middle'
					background_color: (0,0,0,0)
					size_hint_y: 0.4
					on_release:
						app.stop()



<NumericInput>:
	orientation: 'horizontal'
	Label:
		text: str(root.title)
	Button:
		text: '-'
		disabled: root.value <= root.min
		on_release:
			root.value -= root.step
			root.value = max(root.value, root.min)
	Label:
		text: str(root.value)
	Button:
		text: '+'
		disabled: root.value >= root.max
		on_release:
			root.value += root.step
			root.value = min(root.value, root.max)